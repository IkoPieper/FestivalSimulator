PREFLAGS=-I/usr/local/include -L/usr/local/lib
FLAGS=-lmingw32 -std=c99 -lSDLmain -lSDL -lSDL_ttf -lm -L/usr/X11R6/lib/ -lglu32 -lopengl32 -Wall -m64 -mwindows
